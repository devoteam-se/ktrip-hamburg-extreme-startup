{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "strict": true,
    "noErrorTruncation": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "composite": false
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true
  }
}
